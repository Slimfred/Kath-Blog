<div class="article">
  <h3 class="article-title"> <%= link_to article.title, article %> </h3>
  <p class="date-posted"> <%= time_ago_in_words(article.created_at) %> ago</p>
  <p class="article-body"> <%= article.body.truncate_words(100).html_safe %> </p>

  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-warning btn-sm" %>
    <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
  <% end %>
  <hr>

</div> <!-- end article -->
