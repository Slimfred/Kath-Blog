<p id="notice"><%= notice %></p>

<div class="articles-index-page container-fluid">

  <div class="articles-main-page col-sm-12">
    <div class="articles-blog-blurb col-sm-9">
      <h1> Kath's Blog </h1>
      <h3> This will be a blurb about the blog.  This is my blog I hope you like it.  I'm writing it because I want to share stuff.  I think this blurb should be short and sweet. </h3>
        <% if signed_in? && current_user.admin? %>
          <%= link_to 'New Post', new_article_path, :class => "btn btn-success btn-lg" %>
        <% end %>

      <div class="articles col-sm-11">
        <%= render @articles %>
      </div> <!-- end articles -->
    </div> <!-- end articles-blog-blurb -->

    <div class="sidebar-articles-listing col-sm-3">
      <h3> Article listing </h3>

      <% @articles.each do |article| %>
          <%= render partial: "article_list", locals: {article: article} %>
      <% end %>
    </div> <!-- end sidebar-articles-listing -->
  </div> <!-- end articles-index-page -->
</div>
