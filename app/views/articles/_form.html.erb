<div class="enter-article-form container-fluid">
  <%= form_for(article) do |f| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-fields col-sm-8 col-sm-offset-2">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.cktext_area :body, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
      <%= link_to 'Cancel Article', @article, :class => "btn btn-danger cancel-edit-btn" %>
      <%= link_to 'Back to All Articles', articles_path, :class => "btn btn-primary back-to-all-btn" %>
    </div>

  </div> <!-- end form-fields -->
  <% end %>
</div>
